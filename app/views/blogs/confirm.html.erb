<h3>以下の内容で、投稿する。</h3>

<%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
  <%= form.hidden_field :tweet %>

  <p>内容:<%= @blog.tweet %></p>

  <%= form.submit  "確定", class:"button_tweet" %>
<% end %>
<br>
<%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :tweet %>
  <%= form.submit "戻る", name: 'back', class:"button_back" %>
<% end %>